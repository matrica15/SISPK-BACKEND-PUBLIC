@{
    ViewBag.Title = "Tambah Bidang";
}

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Form Tambah Scope
                </div>
            </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                <form class="form-horizontal form-bordered ng-pristine ng-valid" id="sispk_form" action="Create" method="post">
                    <div class="form-body">
                        
                        <div class="form-group">
                            <label class="control-label col-md-3">Kode Scope<span style="color: red;">*</span></label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <input type="text" id="SCOPE_CODE" name="SCOPE_CODE" class="form-control wajib">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Nama Scope <span style="color: red;">*</span></label>
                            <div class="col-md-8">
                                <div class="input-icon right">
                                    <input type="text" id="SCOPE_NAME" name="SCOPE_NAME" class="form-control wajib">
                                </div>
                            </div>
                        </div>

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button class="btn green" type="submit"><i class="fa fa-check"></i>Simpan</button>
                                <a href="@Url.Action("Index")" class="btn default" type="button">Kembali</a>
                            </div>
                        </div>
                    </div>
                </div>
                </form>
                <!-- END FORM-->
                </div>
            </div>
        </div>
        <!-- END PORTLET-->
    </div>

