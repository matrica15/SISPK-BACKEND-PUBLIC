            idx++;
        });        
    }

    function reset_index_MAINTENANCE_DETAIL_REV_DATE() {
        var idx = 0;
       
        $('input.MAINTENANCE_DETAIL_REV_DATE').each(function () {
            $(this).attr('name', 'MAINTENANCE_DETAIL_REV_DATE_[' + idx + ']');
            idx++;
