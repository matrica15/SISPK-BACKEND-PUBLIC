    var no = 0;   

    function add_row() {
        no++;
        $("#list_sni > tbody").append('<tr id="sni_' + no + '">'
                                        +'<td>'
                                            + '<select class="form-control wajib SNI_ID" id="SNI_ID_' + no + '" name="SNI_ID_[' + no + ']" placeholder="Pilih SNI">'
